{
  "compilerOptions": {
    "lib": [
      "es6",
      "es2015.promise"
    ],
    "module": "commonjs",
    "target": "es6",
    "outDir": "build",
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src/**/*.ts",
    "spec/**/*.ts"
  ]
}
